# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=mind-map-content

# Firebase Configuration (if using Firebase)
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
# Either provide a path to the service account JSON file or set the JSON content as an environment variable
# FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# MongoDB Configuration (REQUIRED)
# Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/mind-map-db

# For MongoDB Atlas cloud database
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mind-map-db?retryWrites=true&w=majority

# Local Storage Configuration (for migration only)
LOCAL_STORAGE_PATH=/path/to/your/local/markdown/files

# Server Configuration
PORT=3002
NODE_ENV=development

# CORS Configuration
# In production, set to your frontend URL (e.g., https://yourdomain.com)
CORS_ORIGIN=*

# API Key for admin endpoints (change in production)
API_KEY=admin-secret-key
